package javatest;

import java.util.Scanner;

public class Pattern2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Enter a Value :");
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		for(int i=1;i<=n;i++) {
			System.out.print("*");
		}
		System.out.println();
	
	for(int x=1;x<n-1;x++) {
		for(int y=1;y<=x+6;y++) {
			System.out.print(" ");
		}
		System.out.println("*");
	}
	System.out.println();
	
	for(int x=1;x<n;x++) {
		for(int y=1;y<=x+1;y++) {
			System.out.print(" ");
		}
		System.out.println("*");
	}
	System.out.println();
}
}