package javatest;

import java.util.Scanner;

public class Pattern2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Enter a Value :");
		Scanner sc = new Scanner(System.in);
		int n1 = sc.nextInt();
		int n2 = sc.nextInt();
		for(int i=1;i<=n1;i++) {
			for(int j=1;j<=i;j++) {
				System.out.print(" ");
			}
			for(int j=1;j<=n1;j++) {
				if((i == 1 || i ==n1) || (j == 1 || j == n2)) {
					System.out.print("*");
				}else {
					System.out.println(" ");
				}
				
			}
			System.out.println(" ");
		}
		
	
	
}
}